<script>
                            document.addEventListener('DOMContentLoaded', function () {
                                var urlParams = new URLSearchParams(window.location.search);
                                var tabId = urlParams.get('tab');

                                if (tabId) {
                                    var tab = document.querySelector('#' + tabId + '-tab');
                                    var tabContent = document.querySelector('#' + tabId);

                                    if (tab && tabContent) {
                                        // Activate the selected tab and tab pane
                                        $(tab).tab('show');

                                        // Scroll down more
                                        setTimeout(function () {
                                            window.scrollTo({
                                                top: 1600, // Change this value to scroll down more or less
                                                behavior: 'smooth'
                                            });
                                        }, 300); // Adjust the timeout to ensure it runs after the tab is shown
                                    }
                                }
                            });
