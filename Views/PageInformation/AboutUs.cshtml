    <style>
        .text-primary {
            color: #4fadc9 !important;
        }

        .btn-primary {
            color: #fff;
            background-color: #4fadc9;
            border-color: #4fadc9;
        }

            .btn-primary:hover {
                color: #fff;
                background-color: #2b88a4;
                border-color: #2b88a4;
            }

            .btn-primary:focus, .btn-primary.focus {
                color: #fff;
                background-color: #20758e;
                border-color: #4fadc9;
                box-shadow: 0 0 0 0.2rem #4fadc9;
            }

        .btn-outline-primary {
            color: #4fadc9;
            border-color: #4fadc9;
        }

            .btn-outline-primary:hover {
                color: #fff;
                background-color: #2b88a4;
                border-color: #2b88a4;
            }

            .btn-outline-primary:focus, .btn-outline-primary.focus {
                box-shadow: 0 0 0 0.2rem #4fadc9;
            }

            .btn-outline-primary.disabled, .btn-outline-primary:disabled {
                color: #4fadc9;
                background-color: transparent;
            }

            .btn-outline-primary:not(:disabled):not(.disabled):active, .btn-outline-primary:not(:disabled):not(.disabled).active,
            .show > .btn-outline-primary.dropdown-toggle {
                color: #fff;
                background-color: #4fadc9;
                border-color: #4fadc9;
            }

                .btn-outline-primary:not(:disabled):not(.disabled):active:focus, .btn-outline-primary:not(:disabled):not(.disabled).active:focus,
                .show > .btn-outline-primary.dropdown-toggle:focus {
                    box-shadow: 0 0 0 0.2rem #4fadc9;
                }

        .bg-primary {
            background-color: #4fadc9 !important;
        }

        a {
            color: #ffffff;
            text-decoration: none;
            background-color: transparent;
        }

            a:hover {
                color: #ffffff;
                text-decoration: underline;
            }
    </style>
</head>
<body style="font-family: Tahoma, sans-serif !important">
