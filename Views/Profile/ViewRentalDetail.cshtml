@using EXE202.Utils
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>Hoá đơn thuê phòng - TamDaoStay</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" type="image/png" href="/images/SiteImages/OCBK_LOGO.png" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style type="text/css">
        body {
            margin-top: 20px;
            color: #484b51;
            background-size: cover;
            background-repeat: no-repeat;
            background-position: center;
            background-attachment: fixed;
        }

        .text-secondary-d1 {
            color: #728299 !important;
        }

        .page-header {
            margin: 0 0 1rem;
            padding-bottom: 1rem;
            padding-top: .5rem;
            border-bottom: 1px dotted #1b1e21;
            display: -ms-flexbox;
            display: flex;
            -ms-flex-pack: justify;
            justify-content: space-between;
            -ms-flex-align: center;
            align-items: center;
        }

        .page-title {
            padding: 0;
            margin: 0;
            font-size: 1.75rem;
            font-weight: 300;
        }

        .btn-info {
            color: #fff;
            background-color: #856404 !important;
            border-color: #856404 !important;
        }

        .brc-default-l1 {
            border-color: #dce9f0 !important;
        }

        .ml-n1,
        .mx-n1 {
            margin-left: -.25rem !important;
        }

        .mr-n1,
        .mx-n1 {
            margin-right: -.25rem !important;
        }

        .mb-4,
        .my-4 {
            margin-bottom: 1.5rem !important;
        }

        hr {
            margin-top: 1rem;
            margin-bottom: 1rem;
            border: 0;
            border-top: 1px solid rgba(0, 0, 0, .1);
        }

        .text-grey-m2 {
            color: #888a8d !important;
        }

        .text-success-m2 {
            color: #86bd68 !important;
        }

        .font-bolder,
        .text-600 {
            font-weight: 600 !important;
        }

        .text-110 {
            font-size: 110% !important;
        }

        .text-blue {
            color: #478fcc !important;
        }

        .pb-25,
        .py-25 {
            padding-bottom: .75rem !important;
        }

        .pt-25,
        .py-25 {
            padding-top: .75rem !important;
        }

        .bgc-default-tp1 {
            background-color: #856404 !important
        }

        .bgc-default-l4,
        .bgc-h-default-l4:hover {
            background-color: #f3f8fa !important;
        }

        .page-header .page-tools {
            -ms-flex-item-align: end;
            align-self: flex-end;
        }

        .btn-light {
            color: #757984;
            background-color: #f5f6f9;
            border-color: #dddfe4;
        }

        .w-2 {
            width: 1rem;
        }

        .text-120 {
            font-size: 120% !important;
        }

        .text-primary-m1 {
            color: #4087d4 !important;
        }

        .text-danger-m1 {
            color: #dd4949 !important;
        }

        .text-blue-m2 {
            color: #68a3d5 !important;
        }

        .text-150 {
            font-size: 150% !important;
        }

        .text-60 {
            font-size: 60% !important;
        }

        .text-grey-m1 {
            color: #7b7d81 !important;
        }

        .align-bottom {
            vertical-align: bottom !important;
        }

        .text-grey-m2 {
            color: black !important;
        }
    </style>
    <link href="~/css/site.css" rel="stylesheet" />
</head>

<body>
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />
    <div class="page-content container">
        <div class="page-header text-blue-d2 row">
            <div class="col-md-7">
                <a href="@Url.Action("LoadHomestay", "Homestay")"><img style="width: 350px; font-weight: bold" src="/images/SiteImages/OCBK_LOGO_TEXT_WHITE_BORDER.png" /></a>
            </div>
            <div class="col-md-5">
                <div class="text-grey-m2">
                    <div class="my-1">
                        <b class="text-600">Địa chỉ: </b> Tam Đảo, Vĩnh Phúc
                    </div>
                    <div class="my-1">
                        <b class="text-600">Email: </b> sys.TamDaoStay@gmail.com
                    </div>
                </div>
            </div>
        </div>
        <div class="page-header text-blue-d2 justify-content-center text-center">
            <h1 style="color:#856404 !important;" class="text-uppercase">
                Hoá đơn thuê phòng
            </h1>
        </div>
        <div class="container px-0">
            <div class="row mt-4">
                <div class="col-12 col-lg-12">
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="text-grey-m2">
                                <b class="text-600">Người mua: </b>
                                <span style="color: #4fadc9" class="text-600 text-110 align-middle">@ViewBag.contract.FirstName @ViewBag.contract.LastName</span>
                            </div>
                            <div class="text-grey-m2">
                                <div class="my-1">
                                    <b class="text-600">Địa chỉ: </b> @ViewBag.contract.Destination
                                </div>
                                <div class="my-1">
                                    <b class="text-600">SĐT: </b> @ViewBag.contract.Phone
                                </div>
                                <div class="my-1">
                                    <b class="text-600">Email: </b> @ViewBag.contract.Email
                                </div>
                            </div>
                        </div>

                        <div class="text-95 col-sm-6 align-self-start d-sm-flex justify-content-end">
                            <hr class="d-sm-none" />
                            <div class="text-grey-m2">
                                <div style="color:black" class="mt-1 mb-2 text-secondary-m1 text-600 text-125 text-uppercase">
                                    Thông tin hợp đồng thuê
                                </div>
                                <div style="color:black" class="my-2">
                                    <i style="color: #4fadc9" class="fa fa-circle text-xs mr-1"></i> <span class="text-600 text-90">Mã hợp đồng:</span> #@ViewBag.contract.BookingId
                                </div>
                                <div style="color:black" class="my-2">
                                    <i style="color: #4fadc9" class="fa fa-circle text-xs mr-1"></i> <span class="text-600 text-90">Tên phòng:</span> @ViewBag.homestay.Name
                                </div>
                                <div style="color:black" class="my-2">
                                    <i style="color: #4fadc9" class="fa fa-circle text-xs mr-1"></i> <span class="text-600 text-90">Địa chỉ:</span> @ViewBag.homestay.Address khu @ViewBag.homestay.City
                                </div>
                                <div style="color:black" class="my-2">
                                    <i style="color: #4fadc9" class="fa fa-circle text-xs mr-1"></i> <span class="text-600 text-90">Ngày nhận phòng:</span> @DateTimeHelper.GetFormatedDate(@ViewBag.contract.StartDate)
                                </div>
                                <div style="color:black" class="my-2">
                                    <i style="color: #4fadc9" class="fa fa-circle text-xs mr-1"></i> <span class="text-600 text-90">Ngày trả phòng:</span> @DateTimeHelper.GetFormatedDate(@ViewBag.contract.EndDate)
                                </div>
                                <div style="color:black" class="my-2">
                                    <i style="color: #4fadc9" class="fa fa-circle text-xs mr-1"></i> <span class="text-600 text-90">Ngày giao dịch:</span> @DateTimeHelper.GetFormatedDateTime(@ViewBag.transaction.IssueDate)
                                </div>
                                <div style="color:black" class="my-2">
                                    <i style="color: #4fadc9" class="fa fa-circle text-xs mr-1"></i> <span class="text-600 text-90">Trạng thái:</span> <span class="badge badge-warning badge-pill px-25">@ViewBag.contract.Status</span>
                                </div>
                            </div>
                        </div>

                    </div>
                    <div class="mt-4">
                        <div class="row text-600 text-white bgc-default-tp1 py-25">
                            <div class="d-none d-sm-block col-1">STT</div>
                            <div class="col-9 col-sm-5">Homestay</div>
                            <div class="d-none d-sm-block col-4 col-sm-2">Số ngày</div>
                            <div class="d-none d-sm-block col-sm-2">Giá thuê</div>
                            <div class="col-2">Tổng</div>
                        </div>
                        <div class="text-95 text-secondary-d3">
                            <div style="color:white; background-color: #828181d6" class="row mb-2 mb-sm-0 py-25">
                                <div class="d-none d-sm-block col-1">1</div>
                                <div class="col-9 col-sm-5"> @ViewBag.homestay.Name</div>
                                <div class="d-none d-sm-block col-2">@ViewBag.NumberOfDays</div>
                                <div class="d-none d-sm-block col-2 text-95">@CurrencyHelper.GetFormatedCurrency(@ViewBag.homestay.PricePerNight.ToString()) VNĐ</div>
                                @{
                                    var total = ViewBag.homestay.PricePerNight * ViewBag.NumberOfDays;
                                }
                                <div class="col-2 text-secondary-d2">@CurrencyHelper.GetFormatedCurrency(@total.ToString()) VNĐ</div>
                            </div>
                        </div>
                        @if (ViewBag.contract.PaymentMethod == "OceanPAY")
                        {
                            <div class="text-95 text-secondary-d3">
                                <div style="color:white; background-color: #828181d6" class="row mb-2 mb-sm-0 py-25">
                                    <div class="d-none d-sm-block col-1">2</div>
                                    <div class="col-9 col-sm-5">Giảm giá 5%</div>
                                    <div class="d-none d-sm-block col-2"></div>
                                    @{
                                        var afterDiscount = ViewBag.homestay.PricePerNight * (decimal)ViewBag.NumberOfDays * (decimal)0.05;
                                    }
                                    <div class="d-none d-sm-block col-2 text-95"></div>
                                    <div class="col-2 text-secondary-d2">- @CurrencyHelper.GetFormatedCurrency(@afterDiscount.ToString()) VNĐ</div>
                                </div>
                            </div>
                        }
                        <div class="row border-b-2 brc-default-l2"></div>


                        <div class="row mt-3">
                            <div class="col-12 col-sm-7 text-grey-d2 text-95 mt-2 mt-lg-0">
                            </div>
                            <div class="col-12 col-sm-5 text-grey text-90 order-first order-sm-last">

                                <div class="row my-2 align-items-center bgc-primary-l3 p-2">
                                    <div class="col-5 text-right" style="font-weight: bolder">
                                        Tổng tiền
                                    </div>
                                    <div class="col-7">
                                        <span class="text-150 text-success-d3 opacity-2">@CurrencyHelper.GetFormatedCurrency(@ViewBag.contract.TotalAmount.ToString()) VNĐ</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <hr />
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-1.10.2.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.bundle.min.js"></script>
    <script type="text/javascript">

    </script>
</body>

</html>