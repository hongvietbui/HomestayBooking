@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Đổi mật khẩu - OceanBooking </title>
    <link rel="icon" type="image/png" href="/images/SiteImages/OCBK_LOGO.png" />
    <link rel="stylesheet" href="~/enternewpassword_style/css/css-material-design-iconic-font.min.css">
    <link rel="stylesheet" href="~/enternewpassword_style/css/css-style.css">
    <link href="~/css/site.css" rel="stylesheet" />
    <meta name="robots" content="noindex, follow">
</head>
<body style="background-image: url('/enternewpassword_style/images/background2.jpg');background-size: cover;background-repeat: no-repeat;background-position: center;background-attachment: fixed">
    <div class="container">
        <div class="signup-content" style="padding-top:60px; padding-bottom:10px; padding-left:60px; padding-right:30px; border-radius:15px">
            <form asp-controller="Profile" asp-action="ChangePassword" method="post" class="signin-form">
                <h2 style="padding-bottom: 20px">ĐỔI MẬT KHẨU</h2>
                <div class="form-group">
                    <input type="password" class="form-input" name="oldpassword" id="password1" placeholder="Nhập mật khẩu cũ" required="">
                    <span toggle="#password1" class="zmdi zmdi-eye field-icon toggle-password"></span>
                </div>
                <div class="form-group">
                    <input type="password" class="form-input" name="newpassword" id="password2" placeholder="Nhập mật khẩu mới" required="">
                    <span toggle="#password2" class="zmdi zmdi-eye field-icon toggle-password"></span>
                </div>
                <div class="form-group">
                    <input type="password" class="form-input" name="renewpassword" id="password3" placeholder="Nhập lại mật khẩu mới" required="">
                    <span toggle="#password3" class="zmdi zmdi-eye field-icon toggle-password"></span>
                </div>
                <div style="color:wheat; padding-top:10px; font-style:italic; font-size:small">@ViewBag.message</div>
                @if (@ViewBag.message != "Change password successfully! Redirecting to Profile page in a few second....")
                {
                    <div class="form-group" style="padding-left: 200px; padding-top:30px">
                        <input type="submit" name="submit" id="submit" class="form-submit submit w-100" value="XÁC NHẬN">
                    </div>
                }
                @if (@ViewBag.message == "Change password successfully! Redirecting to Profile page in a few second....")
                {
                    <div style="color:wheat; padding-top:10px; font-style:italic; font-size:small">@ViewBag.message</div>
                    <script>
                        function redirectToLogin() {
                            window.location.href = '@Url.Action("Profile", "Profile")';
                        }
                        setTimeout(redirectToLogin, 5000);
                    </script>
                }
            </form>
        </div>
    </div>

    <style>
        .signup-content {
            background: rgb(0 0 0 / 54%);
        }
    </style>
    <script src="~/enternewpassword_style/js/jquery-jquery.min.js"></script>
    <script src="~/enternewpassword_style/js/4370-js-main.js"></script>

    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-23581568-13"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag() {
            dataLayer.push(arguments);
        }
        gtag('js', new Date());

        gtag('config', 'UA-23581568-13');
    </script>
