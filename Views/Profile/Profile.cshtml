<body>
<div id="snippetContent">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css">
    <script src="~/profile_style/js/js-bootstrap.bundle.min.js"></script>
    <div class="container-xl px-4 mt-4">
        <nav class="nav nav-borders">
            <a class="nav-link" href="@Url.Action("LoadHomestay", "Homestay")">TRANG CHỦ</a>
            <a class="nav-link active ms-0" href="@Url.Action("Profile", "Profile")">THÔNG TIN CÁ NHÂN</a>
            @if(@ViewBag.customer.Role == 0)
            {
                <a class="nav-link" href="@Url.Action("Rental", "Profile")">LỊCH SỬ ĐẶT PHÒNG</a>
                <a class="nav-link" href="@Url.Action("CheckpointPurchase", "Profile")">TÀI CHÍNH</a>
            }
            else if (@ViewBag.customer.Role == 1)
            {
                <a class="nav-link" href="@Url.Action("RentalRequest", "Profile")">YÊU CẦU ĐẶT PHÒNG</a>
            }
            <a class="nav-link" href="@Url.Action("Security", "Profile")">ĐỔI MẬT KHẨU</a>
                
        </nav>
        <hr class="mt-0 mb-4">
        <div class="row">
            <div class="col-xl-2"></div>
            <div class="col-xl-9">
                <form asp-controller="Profile" asp-action="UpdateProfile" method="post">
                    <div class="card mb-4">
                        <div class="card-header">Account Details</div>
                        <div class="card-body">
                            <div class="row gx-3 mb-3">
                                <div class="col-md-6">
                                    <label class="small mb-1" for="inputFirstName">First name</label>
                                    <input class="form-control" id="inputFirstName" type="text" placeholder="" name="fname" value="@ViewBag.customer.FirstName" required>
                                </div>
                                <div class="col-md-6">
                                    <label class="small mb-1" for="inputLastName">Last name</label>
                                    <input class="form-control" id="inputLastName" type="text" placeholder="" name="lname" value="@ViewBag.customer.LastName" required>
                                </div>
                            </div>
                            <div class="row gx-3 mb-3">
                                <div class="col-md-6">
                                    <label class="small mb-1" for="account_balance">Account balance</label>
                                    <input class="form-control" id="account_balance" type="text" placeholder="" value="@CurrencyHelper.GetFormatedCurrency(@ViewBag.customer.Balance.ToString()) VNĐ" readonly>
                                </div>
                                <div class="col-md-6">
                                    <label class="small mb-1" for="phone">Phone number</label>
                                    <input class="form-control" id="phone" type="text" placeholder="" name="phone" value="@ViewBag.customer.PhoneNumber" required>
                                </div>
                            </div>
                            <div class="mb-3">
                                <label class="small mb-1" for="inputEmailAddress">Email address</label>
                                <input class="form-control" id="inputEmailAddress" type="email" placeholder="" value="@ViewBag.customer.Email" readonly>
                            </div>
                            <div class="row gx-3 mb-3">
                                <div class="col-md-6">
                                    <label class="small mb-1" for="dob">Date of Birth</label>
                                    <input class="form-control" id="dob" type="text" placeholder="" value="@DateTimeHelper.GetFormatedDate(@ViewBag.customer.DateOfBirth)" readonly>
                                </div>
                                <div class="col-md-6">
                                    <label class="small mb-1" for="address">Address</label>
                                    <input class="form-control" id="address" type="text" name="address" placeholder="" value="@ViewBag.customer.Address" required>
                                </div>
                            </div>
                            <button class="btn btn-primary" type="submit">Save changes</button>
                        </div>
                    </div>
                </form>
            </div>
            <div class="col-xl-2"></div>
        </div>

        <script>
                function enableUploadButton() {
                    var fileInput = document.getElementById('imageFile');
                    var uploadButton = document.getElementById('uploadBtn');

                    if (fileInput.value) {
                        uploadButton.disabled = false;
                    } else {
                        uploadButton.disabled = true;
                    }
                }
            </script>

    </div>
    <style type="text/css">
