<body style="background-image: url('/enternewpassword_style/images/background2.jpg');background-size: cover;background-repeat: no-repeat;background-position: center;background-attachment: fixed">
<div class="main">
    <div class="container" style="padding-top:150px;padding-left:180px; width:1070px">
        <div class="signup-content" style="padding-top:40px; padding-bottom:10px; padding-left:40px; padding-right:30px; border-radius:15px">
            <form asp-controller="ForgotPassword" asp-action="NewPassword" method="post" class="signin-form">
                <h2 style="padding-bottom: 20px"> Reset Password </h2>

                <div class="form-group">
                    <input type="password" class="form-input" name="newpassword" id="password1" placeholder="New Password" required="">
                    <span toggle="#password1" class="zmdi zmdi-eye field-icon toggle-password"></span>
                </div>
                <div class="form-group">
                    <input type="password" class="form-input" name="renewpassword" id="password2" placeholder="Re-Password" required="">
                    <span toggle="#password2" class="zmdi zmdi-eye field-icon toggle-password"></span>
                </div>
                <div style="color:wheat; padding-top:10px; font-style:italic; font-size:small">@ViewBag.error</div>
                @if (@ViewBag.message != "Reset password successfully! Redirecting to Login page in a few second....")
                {
                    <div class="form-group" style="padding-left: 200px; padding-top:30px">
                        <input type="submit" name="submit" id="submit" class="form-submit submit" value="CONFIRM">
                    </div>
                }
                @if (@ViewBag.message == "Reset password successfully! Redirecting to Login page in a few second....")
                {
                    <div style="color:wheat; padding-top:10px; font-style:italic; font-size:small">@ViewBag.message</div>
                    <script>
                            function redirectToLogin() {
                                window.location.href = '@Url.Action("Login", "Login")';
                            }
                            setTimeout(redirectToLogin, 5000);
                        </script>
                }
            </form>
        </div>
    </div>
</div>
    <style>
        .fab {
            position: fixed; /* Đảm bảo nút luôn ở cùng một vị trí trên màn hình */
